<UserControl x:Class="MContracts.Controls.CellsGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="199" d:DesignWidth="338" >
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid  Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="False" AllowDrop="True">
            <GridSplitter FlowDirection="RightToLeft" />
        </Grid>
        
    </ScrollViewer>
</UserControl>

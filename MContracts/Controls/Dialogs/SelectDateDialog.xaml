<Window x:Class="MContracts.Controls.Dialogs.SelectDateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Укажите дату подписания актов" Height="153" Width="296" WindowStyle="ToolWindow" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>            
        </Grid.RowDefinitions>
        <Button Margin="5,5,0,0" Content="ОК" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100"  Grid.Column="1" Click="Button_Click_1" />
        <DatePicker x:Name="SignDatePicker" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="132" SelectedDateFormat="Long"/>
        <CheckBox x:Name="SignState" Content="Подписать" HorizontalAlignment="Left" Margin="58,44,0,-10" VerticalAlignment="Top" RenderTransformOrigin="0.324,0.6" IsThreeState="True" IsChecked="True" />

    </Grid>
</Window>
